---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

const skills = [
  { name: 'PYTHON', level: 95 },
  { name: 'JAVASCRIPT', level: 90 },
  { name: 'REACT', level: 85 },
  { name: 'AI/ML', level: 88 },
  { name: 'ASTRO', level: 80 },
  { name: 'NODE.JS', level: 82 },
];

const stats = [
  { value: '50+', label: 'PROJECTS_COMPLETED' },
  { value: '12', label: 'YEARS_EXPERIENCE' },
  { value: '5', label: 'INDUSTRIES' },
  { value: '∞', label: 'CURIOSITY_LEVEL' },
];
---

<BaseLayout title="JT_DEV // AI-NATIVE ENGINEER" design={2}>
  <div class="min-h-screen bg-[var(--bg-primary)] text-white relative overflow-hidden">
    <!-- Grid background -->
    <div class="fixed inset-0 grid-bg pointer-events-none"></div>
    
    <!-- Scanlines overlay -->
    <div class="fixed inset-0 scanlines pointer-events-none"></div>
    
    <Navigation design={2} currentPath="/2" />
    
    <!-- Hero Section -->
    <header class="min-h-screen flex items-center px-6 pt-20 relative z-10">
      <div class="max-w-7xl mx-auto w-full">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="inline-block animate-fadeInUp">
              <span class="font-[Space_Mono] text-xs text-[var(--neon-cyan)] tracking-[0.4em] animate-pulse">
                SYSTEM_INITIALIZED
              </span>
            </div>
            
            <h1 class="font-[Orbitron] text-4xl md:text-6xl lg:text-7xl font-bold mt-6 mb-4 animate-fadeInUp stagger-1">
              <span class="block text-[var(--neon-pink)] text-glow-pink animate-glitch">JAMIE</span>
              <span class="block text-[var(--neon-cyan)] text-glow-cyan">TAYLOR</span>
            </h1>
            
            <p class="font-[Space_Mono] text-[var(--text-secondary)] max-w-lg mb-8 animate-fadeInUp stagger-2">
              {'>'} AI-native developer pushing the boundaries of what's possible
              <br />
              {'>'} Location: LOUGHBOROUGH.UK
              <br />
              {'>'} Status: <span class="text-[var(--neon-green)]">AVAILABLE_FOR_HIRE</span>
            </p>
            
            <div class="flex gap-4 animate-fadeInUp stagger-3">
              <a 
                href="#projects" 
                class="font-[Space_Mono] px-6 py-3 border border-[var(--neon-pink)] text-[var(--neon-pink)] hover:bg-[var(--neon-pink)] hover:text-black transition-all text-sm tracking-wider"
              >
                [VIEW_PROJECTS]
              </a>
              <a 
                href="#profile" 
                class="font-[Space_Mono] px-6 py-3 border border-[var(--neon-cyan)] text-[var(--neon-cyan)] hover:bg-[var(--neon-cyan)] hover:text-black transition-all text-sm tracking-wider"
              >
                [ACCESS_PROFILE]
              </a>
            </div>
          </div>
          
          <div class="hidden lg:block relative animate-fadeInUp stagger-4">
            <!-- ASCII Art Portrait Placeholder -->
            <div class="font-[Space_Mono] text-[8px] leading-[1.1] text-[var(--neon-cyan)] opacity-40">
              <pre>{`
    ██████╗ ███████╗██╗   ██╗
    ██╔══██╗██╔════╝██║   ██║
    ██║  ██║█████╗  ██║   ██║
    ██║  ██║██╔══╝  ╚██╗ ██╔╝
    ██████╔╝███████╗ ╚████╔╝ 
    ╚═════╝ ╚══════╝  ╚═══╝  
                              `}</pre>
            </div>
            
            <!-- Floating stats -->
            <div class="absolute top-10 right-0 space-y-4">
              {stats.map((stat, i) => (
                <div 
                  class="font-[Space_Mono] text-right animate-slideInRight"
                  style={`animation-delay: ${0.5 + i * 0.1}s`}
                >
                  <div class="text-3xl font-bold text-[var(--neon-pink)]">{stat.value}</div>
                  <div class="text-[10px] text-[var(--text-secondary)] tracking-widest">{stat.label}</div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Projects Section -->
    <section id="projects" class="py-24 px-6 relative z-10">
      <div class="max-w-7xl mx-auto">
        <div class="mb-16">
          <span class="font-[Space_Mono] text-xs text-[var(--neon-cyan)] tracking-[0.4em]">
            // PORTFOLIO_DATA
          </span>
          <h2 class="font-[Orbitron] text-3xl md:text-4xl mt-4 text-white">
            PROJECT_<span class="text-[var(--neon-pink)]">ARCHIVE</span>
          </h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project, index) => (
            <ProjectCard project={project} design={2} index={index} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- Profile Section -->
    <section id="profile" class="py-24 px-6 relative z-10 border-t border-[var(--neon-cyan)]/20">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16">
          <!-- Background -->
          <div>
            <span class="font-[Space_Mono] text-xs text-[var(--neon-cyan)] tracking-[0.4em]">
              // USER_PROFILE
            </span>
            <h2 class="font-[Orbitron] text-3xl md:text-4xl mt-4 mb-8 text-white">
              SYSTEM_<span class="text-[var(--neon-pink)]">ORIGIN</span>
            </h2>
            
            <div class="font-[Space_Mono] text-sm text-[var(--text-secondary)] space-y-4">
              <p class="border-l-2 border-[var(--neon-cyan)] pl-4">
                {'>'} Initialized with BSc Chemistry (Leicester, 2012)
                <br />
                {'>'} Processed through UK Civil Service management protocols
                <br />
                {'>'} Audio systems calibrated at BBC Local Radio
                <br />
                {'>'} Reality matrix expanded via VR Operations
                <br />
                {'>'} IT Support subroutines activated
                <br />
                {'>'} Current mode: AI-NATIVE_DEVELOPER
              </p>
              
              <p>
                My trajectory wasn't linear—it was a recursive optimization. Each experience 
                fed into the next, building a unique skillset that bridges analytical thinking, 
                human systems understanding, and cutting-edge technology.
              </p>
              
              <p>
                Now I channel all of this into creating AI-powered solutions that actually 
                make a difference. Not because AI is trendy, but because it's genuinely 
                transformative when applied with purpose.
              </p>
            </div>
          </div>
          
          <!-- Skills -->
          <div>
            <span class="font-[Space_Mono] text-xs text-[var(--neon-cyan)] tracking-[0.4em]">
              // SKILL_MATRIX
            </span>
            <h2 class="font-[Orbitron] text-3xl md:text-4xl mt-4 mb-8 text-white">
              CAPABILITY_<span class="text-[var(--neon-pink)]">SCAN</span>
            </h2>
            
            <div class="space-y-6">
              {skills.map((skill, i) => (
                <div class="animate-fadeInUp" style={`animation-delay: ${i * 0.1}s`}>
                  <div class="flex justify-between items-center mb-2">
                    <span class="font-[Space_Mono] text-xs text-[var(--neon-cyan)]">
                      {skill.name}
                    </span>
                    <span class="font-[Space_Mono] text-xs text-[var(--neon-pink)]">
                      {skill.level}%
                    </span>
                  </div>
                  <div class="h-2 bg-[var(--bg-card)] border border-[var(--neon-cyan)]/20 relative overflow-hidden">
                    <div 
                      class="h-full bg-gradient-to-r from-[var(--neon-cyan)] to-[var(--neon-pink)] transition-all duration-1000"
                      style={`width: ${skill.level}%`}
                    ></div>
                    <div class="absolute inset-0 bg-[length:10px_10px] bg-repeat opacity-30" style="background-image: linear-gradient(45deg, transparent 25%, rgba(0,255,255,0.1) 25%, rgba(0,255,255,0.1) 50%, transparent 50%, transparent 75%, rgba(0,255,255,0.1) 75%);"></div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Terminal Section -->
    <section class="py-24 px-6 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="bg-[var(--bg-card)] border border-[var(--neon-cyan)]/30 rounded-lg overflow-hidden">
          <!-- Terminal header -->
          <div class="flex items-center gap-2 px-4 py-3 border-b border-[var(--neon-cyan)]/20 bg-black/30">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="ml-4 font-[Space_Mono] text-xs text-[var(--text-secondary)]">
              jamie@loughborough:~
            </span>
          </div>
          
          <!-- Terminal body -->
          <div class="p-6 font-[Space_Mono] text-sm">
            <p class="text-[var(--neon-green)]">$ whoami</p>
            <p class="text-[var(--text-secondary)] mb-4">jamie_taylor // AI-native developer</p>
            
            <p class="text-[var(--neon-green)]">$ cat philosophy.txt</p>
            <p class="text-[var(--neon-pink)] italic mb-4">
              "Technology should amplify human potential, not replace human connection."
            </p>
            
            <p class="text-[var(--neon-green)]">$ ./contact --mode=collaborate</p>
            <p class="text-[var(--neon-cyan)]">
              READY_TO_CONNECT: Reach out for AI projects, web development, or just to geek out about tech.
            </p>
            
            <p class="text-[var(--neon-green)] mt-4 animate-pulse">█</p>
          </div>
        </div>
      </div>
    </section>
    
    <Footer design={2} />
  </div>
</BaseLayout>

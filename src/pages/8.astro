---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

const experiences = [
  { year: '2012', title: 'Chemistry BSc (Hons)' },
  { year: '2013', title: 'Civil Service Management' },
  { year: '2015', title: 'BBC Local Radio' },
  { year: '2017', title: 'VR Operations' },
  { year: '2019', title: 'IT Support' },
  { year: 'NOW', title: 'AI-Native Dev' },
];

const skills = ['Python', 'JavaScript', 'React', 'Astro', 'AI/ML', 'Node.js'];
---

<BaseLayout title="Jamie Taylor — Brutalist Bauhaus" design={8}>
  <div class="min-h-screen bg-white text-black">
    <Navigation design={8} currentPath="/8" />
    
    <!-- HERO SECTION — BRUTALIST -->
    <header class="min-h-screen flex flex-col justify-center px-4 pt-20 border-b-8 border-black">
      <div class="w-full">
        <!-- Marquee banner -->
        <div class="overflow-hidden border-y-4 border-black py-4 mb-12 -mx-4">
          <div class="animate-marquee whitespace-nowrap flex">
            {[...Array(10)].map(() => (
              <span class="font-[Archivo_Black] text-6xl md:text-8xl uppercase mx-8">
                JAMIE TAYLOR • AI DEVELOPER • LOUGHBOROUGH UK •
              </span>
            ))}
          </div>
        </div>
        
        <div class="max-w-none px-4">
          <div class="grid md:grid-cols-2 gap-8 items-end">
            <div>
              <h1 class="font-[Archivo_Black] text-6xl md:text-8xl lg:text-[12rem] uppercase leading-[0.85] mb-8">
                AI<br/>
                NATIVE<br/>
                DEV
              </h1>
            </div>
            
            <div class="border-4 border-black p-6 mb-8 bg-white">
              <p class="text-xl md:text-2xl uppercase leading-tight mb-6 font-['Space_Grotesk'] font-medium">
                I BUILD THINGS WITH CODE AND AI. NO FLUFF. NO BUZZWORDS. 
                JUST SOLUTIONS THAT WORK.
              </p>
              
              <div class="flex flex-wrap gap-4">
                <a 
                  href="#work" 
                  class="inline-block bg-black text-white px-6 py-3 font-bold uppercase hover:bg-[var(--accent-raw)] hover:text-black transition-colors font-['Space_Grotesk']"
                >
                  SEE WORK →
                </a>
                <a 
                  href="#about" 
                  class="inline-block border-4 border-black px-6 py-3 font-bold uppercase hover:bg-black hover:text-white transition-colors font-['Space_Grotesk']"
                >
                  ABOUT ME
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- TRANSITION — Geometric Bridge -->
    <div class="flex items-center gap-0 -mt-8 relative z-10">
      <div class="flex-1 h-8 bg-[var(--bauhaus-red)]"></div>
      <div class="w-16 h-16 bg-[var(--bauhaus-yellow)] rotate-45 -mx-8 border-4 border-black"></div>
      <div class="flex-1 h-8 bg-[var(--bauhaus-blue)]"></div>
    </div>
    
    <!-- WORK SECTION — BAUHAUS -->
    <section id="work" class="py-20 px-4 md:px-8 lg:px-12 bg-[var(--bg-secondary)]">
      <div class="max-w-7xl mx-auto">
        <div class="flex items-end justify-between mb-16 border-b-4 border-black pb-4">
          <h2 class="font-['Space_Grotesk'] text-5xl md:text-7xl font-bold tracking-tight uppercase">
            SELECTED<br/>WORK
          </h2>
          <div class="hidden md:block">
            <span class="text-sm uppercase tracking-widest font-['Space_Grotesk']">Projects</span>
            <div class="w-12 h-12 bg-[var(--bauhaus-red)] rounded-full mt-2"></div>
          </div>
        </div>
        
        <!-- Projects Grid with Geometric Accents -->
        <div class="grid md:grid-cols-2 gap-8 relative">
          {projects.map((project, index) => (
            <ProjectCard project={project} design={8} index={index} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- ABOUT SECTION — BAUHAUS Grid Layout -->
    <section id="about" class="py-20 px-4 md:px-8 lg:px-12 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-12 gap-8">
          <!-- Left Column: Statement with Brutalist Boldness -->
          <div class="md:col-span-5">
            <div class="bg-[var(--bauhaus-blue)] text-white p-8 md:p-12 h-full border-4 border-black">
              <span class="text-[var(--bauhaus-yellow)] font-mono text-sm mb-4 block">01</span>
              <h2 class="font-[Archivo_Black] text-4xl md:text-5xl uppercase leading-tight mb-8">
                I DON'T<br/>FOLLOW<br/>TRENDS
              </h2>
              <p class="text-lg leading-relaxed text-white/90 mb-6 font-['Space_Grotesk']">
                My path through chemistry, civil service, BBC Radio, VR, and IT taught me one thing: the best solutions emerge when you understand both the system <em>and</em> the human using it.
              </p>
              <p class="text-lg leading-relaxed text-white/90 font-['Space_Grotesk']">
                AI isn't magic. It's a tool. Used well, it removes friction.
              </p>
            </div>
          </div>
          
          <!-- Right Column: Timeline -->
          <div class="md:col-span-7">
            <div class="border-4 border-black p-8 h-full bg-white">
              <div class="flex items-center justify-between mb-8">
                <h3 class="font-['Space_Grotesk'] text-2xl font-bold uppercase">Path Taken</h3>
                <div class="w-12 h-12 bg-[var(--bauhaus-red)] rounded-full border-2 border-black"></div>
              </div>
              
              <div class="space-y-6">
                {experiences.map((exp, i) => (
                  <div class="flex items-baseline gap-4 group border-b-2 border-black/10 pb-4 last:border-0">
                    <span class="font-mono text-sm text-[var(--bauhaus-red)] font-bold w-16">{exp.year}</span>
                    <span class="flex-1 text-lg font-medium group-hover:translate-x-2 transition-transform font-['Space_Grotesk']">
                      {exp.title}
                    </span>
                    <div class="w-3 h-3 bg-[var(--bauhaus-yellow)] border border-black"></div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- SKILLS SECTION — BAUHAUS Color Blocks -->
    <section class="py-20 bg-[var(--bauhaus-black)] text-white">
      <div class="max-w-7xl mx-auto px-4 md:px-8 lg:px-12">
        <div class="flex items-center gap-6 mb-12">
          <h2 class="font-[Archivo_Black] text-4xl md:text-5xl uppercase">
            TOOLS I USE
          </h2>
          <div class="flex-1 h-2 bg-[var(--bauhaus-yellow)]"></div>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {skills.map((skill, i) => {
            const colors = ['bg-[var(--bauhaus-red)]', 'bg-[var(--bauhaus-blue)]', 'bg-[var(--bauhaus-yellow)] text-black'];
            const color = colors[i % 3];
            return (
              <div class={`${color} aspect-square flex items-center justify-center p-4 border-4 border-black hover:scale-105 transition-transform`}>
                <span class="font-bold text-lg md:text-xl uppercase text-center leading-tight font-['Space_Grotesk']">
                  {skill}
                </span>
              </div>
            )
          })}
        </div>
      </div>
    </section>
    
    <!-- PHILOSOPHY SECTION — Hybrid Brutalist/Bauhaus -->
    <section class="py-16 px-4 border-y-8 border-black bg-white">
      <div class="max-w-4xl mx-auto text-center">
        <div class="relative">
          <span class="absolute -top-12 left-0 font-[Archivo_Black] text-[200px] text-black/10 leading-none select-none">
            "
          </span>
          <blockquote class="font-[Archivo_Black] text-3xl md:text-5xl uppercase leading-tight relative z-10">
            GOOD CODE SOLVES PROBLEMS.
            GREAT CODE MAKES PROBLEMS DISAPPEAR.
          </blockquote>
        </div>
        <div class="mt-8 flex justify-center gap-4">
          <div class="w-8 h-8 bg-[var(--bauhaus-red)] rotate-12"></div>
          <div class="w-8 h-8 bg-[var(--bauhaus-yellow)] -rotate-12"></div>
          <div class="w-8 h-8 bg-[var(--bauhaus-blue)] rotate-12"></div>
        </div>
      </div>
    </section>
    
    <!-- CONTACT CTA — Hybrid Boldness -->
    <section class="py-20 px-4 md:px-8 lg:px-12 bg-[var(--accent-raw)] border-b-8 border-black">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-[Archivo_Black] text-4xl md:text-6xl uppercase mb-8 text-black">
          GOT A PROJECT?
        </h2>
        <p class="text-xl uppercase mb-8 font-['Space_Grotesk'] font-bold text-black">
          I'M AVAILABLE FOR FREELANCE WORK. LET'S TALK.
        </p>
        <a 
          href="mailto:hello@jamietaylor.dev" 
          class="inline-block bg-black text-white px-10 py-4 font-bold text-xl uppercase hover:bg-white hover:text-black border-4 border-black transition-colors font-['Space_Grotesk']"
        >
          GET IN TOUCH →
        </a>
        <div class="mt-8 flex justify-center gap-2">
          <div class="w-6 h-6 bg-black rotate-45"></div>
          <div class="w-6 h-6 bg-white border-2 border-black rotate-45"></div>
          <div class="w-6 h-6 bg-black rotate-45"></div>
        </div>
      </div>
    </section>
    
    <Footer design={8} />
  </div>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

const experiences = [
  'CHEMISTRY BSC (HONS) 2012',
  'UK CIVIL SERVICE MANAGEMENT',
  'BBC LOCAL RADIO',
  'VR EXPERIENCE OPERATIONS',
  'IT SUPPORT',
  'AI-NATIVE DEVELOPER',
];
---

<BaseLayout title="J.TAYLOR — DEVELOPER" design={3}>
  <div class="min-h-screen bg-white text-black">
    <Navigation design={3} currentPath="/3" />
    
    <!-- Hero Section -->
    <header class="min-h-screen flex flex-col justify-center px-4 pt-20 border-b-8 border-black">
      <div class="w-full">
        <!-- Marquee banner -->
        <div class="overflow-hidden border-y-4 border-black py-4 mb-12 -mx-4">
          <div class="animate-marquee whitespace-nowrap flex">
            {[...Array(10)].map(() => (
              <span class="font-[Archivo_Black] text-6xl md:text-8xl uppercase mx-8">
                JAMIE TAYLOR • AI DEVELOPER • LOUGHBOROUGH UK •
              </span>
            ))}
          </div>
        </div>
        
        <div class="max-w-none px-4">
          <div class="grid md:grid-cols-2 gap-8 items-end">
            <div>
              <h1 class="font-[Archivo_Black] text-6xl md:text-8xl lg:text-[12rem] uppercase leading-[0.85] mb-8">
                AI<br/>
                NATIVE<br/>
                DEV
              </h1>
            </div>
            
            <div class="border-4 border-black p-6 mb-8">
              <p class="text-xl md:text-2xl uppercase leading-tight mb-6">
                I BUILD THINGS WITH CODE AND AI. NO FLUFF. NO BUZZWORDS. 
                JUST SOLUTIONS THAT WORK.
              </p>
              
              <div class="flex flex-wrap gap-4">
                <a 
                  href="#work" 
                  class="inline-block bg-black text-white px-6 py-3 font-bold uppercase hover:bg-[var(--accent-raw)] hover:text-black transition-colors"
                >
                  SEE WORK →
                </a>
                <a 
                  href="#about" 
                  class="inline-block border-4 border-black px-6 py-3 font-bold uppercase hover:bg-black hover:text-white transition-colors"
                >
                  ABOUT ME
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Work Section -->
    <section id="work" class="py-16 px-4">
      <div class="max-w-none">
        <div class="border-4 border-black p-4 mb-12 inline-block">
          <h2 class="font-[Archivo_Black] text-4xl md:text-6xl uppercase">
            SELECTED WORK
          </h2>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          {projects.map((project, index) => (
            <ProjectCard project={project} design={3} index={index} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- About Section -->
    <section id="about" class="py-16 px-4 bg-black text-white">
      <div class="max-w-none">
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Left column - Big statement -->
          <div class="lg:col-span-2">
            <p class="font-[Archivo_Black] text-4xl md:text-6xl lg:text-7xl uppercase leading-[1.1] mb-8">
              I DON'T FOLLOW TRENDS.
              I BUILD THINGS THAT MATTER.
            </p>
            
            <div class="space-y-6 text-xl leading-relaxed">
              <p>
                My path wasn't conventional. Chemistry degree. Civil service. BBC Radio. VR operations. 
                IT support. Each experience taught me something different about how systems work — 
                both technical and human.
              </p>
              <p>
                Now I use AI not because it's fashionable, but because it's genuinely useful. 
                I've seen enough hype cycles to know the difference between revolution and marketing.
              </p>
            </div>
          </div>
          
          <!-- Right column - Experience list -->
          <div class="border-4 border-white p-6">
            <h3 class="font-[Archivo_Black] text-2xl uppercase mb-6 border-b-4 border-white pb-4">
              PATH TAKEN
            </h3>
            <ul class="space-y-4">
              {experiences.map((exp, i) => (
                <li class="flex items-center gap-4">
                  <span class="font-bold text-[var(--accent-raw)]">{String(i + 1).padStart(2, '0')}</span>
                  <span class="uppercase font-bold">{exp}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Philosophy Section -->
    <section class="py-16 px-4 border-y-8 border-black">
      <div class="max-w-4xl mx-auto text-center">
        <div class="relative">
          <span class="absolute -top-12 left-0 font-[Archivo_Black] text-[200px] text-black/10 leading-none select-none">
            "
          </span>
          <blockquote class="font-[Archivo_Black] text-3xl md:text-5xl uppercase leading-tight relative z-10">
            GOOD CODE SOLVES PROBLEMS.
            GREAT CODE MAKES PROBLEMS DISAPPEAR.
          </blockquote>
        </div>
      </div>
    </section>
    
    <!-- Skills Section -->
    <section class="py-16 px-4">
      <div class="max-w-none">
        <div class="border-4 border-black p-4 mb-12 inline-block">
          <h2 class="font-[Archivo_Black] text-4xl md:text-6xl uppercase">
            TOOLS I USE
          </h2>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {['PYTHON', 'JAVASCRIPT', 'REACT', 'ASTRO', 'NODE.JS', 'AI/ML', 'TAILWIND', 'TYPESCRIPT', 'OPENAI', 'LANGCHAIN', 'POSTGRES', 'GIT'].map((skill) => (
            <div class="border-4 border-black p-4 text-center hover:bg-[var(--accent-yellow)] transition-colors group">
              <span class="font-bold uppercase group-hover:scale-110 inline-block transition-transform">
                {skill}
              </span>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Contact CTA -->
    <section class="py-16 px-4 bg-[var(--accent-raw)]">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-[Archivo_Black] text-4xl md:text-6xl uppercase mb-8">
          GOT A PROJECT?
        </h2>
        <p class="text-xl uppercase mb-8">
          I'M AVAILABLE FOR FREELANCE WORK. LET'S TALK.
        </p>
        <a 
          href="mailto:hello@jamietaylor.dev" 
          class="inline-block bg-black text-white px-8 py-4 font-bold text-xl uppercase hover:bg-white hover:text-black transition-colors"
        >
          GET IN TOUCH →
        </a>
      </div>
    </section>
    
    <Footer design={3} />
  </div>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

const experiences = [
  { year: '2012', code: 'CHM-001', title: 'Chemistry BSc (Hons)', mode: 'B-I' },
  { year: '2013', code: 'CSV-002', title: 'Civil Service Management', mode: 'B-II' },
  { year: '2015', code: 'BBC-003', title: 'BBC Local Radio', mode: 'B-II' },
  { year: '2017', code: 'VRX-004', title: 'VR Operations', mode: 'B-III' },
  { year: '2019', code: 'ITS-005', title: 'IT Support', mode: 'B-III' },
  { year: 'NOW', code: 'DEV-006', title: 'AI-Native Developer', mode: 'Hi-Fi' },
];

const skills = [
  { name: 'Python', level: '270', unit: 'min' },
  { name: 'JavaScript', level: '180', unit: 'min' },
  { name: 'React', level: '120', unit: 'min' },
  { name: 'Astro', level: '90', unit: 'min' },
  { name: 'AI/ML', level: '240', unit: 'min' },
  { name: 'Node.js', level: '180', unit: 'min' },
];
---

<BaseLayout title="Jamie Taylor — VHS Analog" design={9}>
  <div class="min-h-screen bg-[var(--bg-primary)] text-[var(--text-primary)] relative overflow-hidden">
    <!-- Analog noise overlay -->
    <div class="fixed inset-0 pointer-events-none z-50 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=\'0 0 256 256\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cfilter id=\'noise\'%3E%3CfeTurbulence type=\'fractalNoise\' baseFrequency=\'0.9\' numOctaves=\'4\' stitchTiles=\'stitch\'/%3E%3C/filter%3E%3Crect width=\'100%25\' height=\'100%25\' filter=\'url(%23noise)\'/%3E%3C/svg%3E');"></div>
    
    <!-- Scanlines -->
    <div class="fixed inset-0 pointer-events-none z-40" style="background: repeating-linear-gradient(0deg, rgba(0,0,0,0.1) 0px, transparent 1px, transparent 2px); background-size: 100% 4px;"></div>
    
    <Navigation design={9} currentPath="/9" />
    
    <!-- HERO SECTION — VHS Cassette Style -->
    <header class="min-h-screen pt-24 px-4 md:px-8 relative">
      <!-- Clean background - no patterns -->
      
      <div class="max-w-6xl mx-auto relative z-10">
        <!-- Top label bar -->
        <div class="flex items-center justify-between border-b-2 border-[var(--text-muted)]/30 pb-4 mb-8">
          <div class="flex items-center gap-4">
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">MODEL:</span>
            <span class="font-['Inter'] font-black text-2xl text-[var(--text-primary)] tracking-wider">JT-DEV-001</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="font-['Noto_Sans_JP'] text-xs text-[var(--text-muted)]">ハイファイ</span>
            <span class="px-2 py-1 bg-[var(--vhs-cinnabar)] text-white font-['Inter'] font-bold text-xs">HI-FI</span>
          </div>
        </div>
        
        <!-- Main content grid -->
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <!-- Left: VHS Window with Photo -->
          <div class="relative">
            <!-- VHS Cassette frame -->
            <div class="bg-[var(--bg-secondary)] border-4 border-[var(--text-muted)]/30 p-4 relative">
              <!-- Top label area -->
              <div class="flex justify-between items-center mb-4 border-b border-[var(--text-muted)]/20 pb-2">
                <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">E-120 HR</span>
                <div class="flex gap-1">
                  <span class="w-2 h-2 rounded-full bg-[var(--vhs-cinnabar)]"></span>
                  <span class="w-2 h-2 rounded-full bg-[var(--vhs-gold)]"></span>
                </div>
              </div>
              
              <!-- Photo window -->
              <div class="relative bg-black aspect-square overflow-hidden">
                <img 
                  src="/JT.jpg" 
                  alt="Jamie Taylor" 
                  class="w-full h-full object-cover grayscale opacity-90"
                />
                <!-- Scanline overlay on photo -->
                <div class="absolute inset-0" style="background: repeating-linear-gradient(0deg, rgba(0,0,0,0.2) 0px, transparent 1px, transparent 3px); background-size: 100% 4px;"></div>
                <!-- VHS timestamp -->
                <div class="absolute bottom-4 right-4 font-['JetBrains_Mono'] text-[var(--vhs-gold)] text-sm bg-black/80 px-2 py-1">
                  00:00:12
                </div>
              </div>
              
              <!-- Bottom label -->
              <div class="mt-4 flex justify-between items-center">
                <span class="font-['Inter'] font-bold text-lg text-[var(--text-primary)]">JAMIE TAYLOR</span>
                <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">SUPER HIGH GRADE</span>
              </div>
            </div>
            
            <!-- Decorative screw heads -->
            <div class="absolute -top-2 -left-2 w-4 h-4 rounded-full bg-[var(--text-muted)]/30"></div>
            <div class="absolute -top-2 -right-2 w-4 h-4 rounded-full bg-[var(--text-muted)]/30"></div>
            <div class="absolute -bottom-2 -left-2 w-4 h-4 rounded-full bg-[var(--text-muted)]/30"></div>
            <div class="absolute -bottom-2 -right-2 w-4 h-4 rounded-full bg-[var(--text-muted)]/30"></div>
          </div>
          
          <!-- Right: Product info -->
          <div class="space-y-6">
            <!-- Brand header -->
            <div>
              <div class="flex items-center gap-3 mb-2">
                <div class="flex gap-1">
                  {[...Array(5)].map((_, i) => (
                    <span class="w-3 h-3 rounded-full bg-[var(--vhs-cinnabar)]"></span>
                  ))}
                </div>
                <span class="font-['Noto_Sans_JP'] text-xs text-[var(--vhs-cinnabar)]">プロフェッショナル</span>
              </div>
              <h1 class="font-['Inter'] font-black text-5xl md:text-7xl text-[var(--text-primary)] uppercase leading-none tracking-tight">
                AI NATIVE
              </h1>
              <h1 class="font-['Inter'] font-black text-5xl md:text-7xl uppercase leading-none tracking-tight" style="background: var(--metallic-silver); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                DEVELOPER
              </h1>
            </div>
            
            <!-- Description -->
            <p class="font-['Inter'] text-lg text-[var(--text-secondary)] leading-relaxed max-w-md">
              Building software with AI. No fluff, no buzzwords. Just solutions that work.
              <span class="font-['Noto_Sans_JP'] text-sm block mt-2 text-[var(--text-muted)]">コードとAIで構築</span>
            </p>
            
            <!-- Tech specs -->
            <div class="border border-[var(--text-muted)]/30 p-4 bg-[var(--bg-card)]">
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="font-['JetBrains_Mono'] text-[var(--text-muted)] block">LOCATION</span>
                  <span class="font-['Inter'] text-[var(--text-primary)]">Loughborough, UK</span>
                </div>
                <div>
                  <span class="font-['JetBrains_Mono'] text-[var(--text-muted)] block">FORMAT</span>
                  <span class="font-['Inter'] text-[var(--text-primary)]">Full Stack</span>
                </div>
                <div>
                  <span class="font-['JetBrains_Mono'] text-[var(--text-muted)] block">STATUS</span>
                  <span class="font-['Inter'] text-[var(--vhs-ocean)]">Available</span>
                </div>
                <div>
                  <span class="font-['JetBrains_Mono'] text-[var(--text-muted)] block">TYPE</span>
                  <span class="font-['Inter'] text-[var(--text-primary)]">Freelance</span>
                </div>
              </div>
            </div>
            
            <!-- CTA Buttons -->
            <div class="flex gap-4">
              <a 
                href="#work" 
                class="inline-flex items-center gap-2 bg-[var(--vhs-cinnabar)] text-white px-6 py-3 font-['Inter'] font-bold uppercase tracking-wider hover:bg-[var(--vhs-gold)] transition-colors"
              >
                <span>View Work</span>
                <span class="font-['JetBrains_Mono'] text-xs">→</span>
              </a>
              <a 
                href="#about" 
                class="inline-flex items-center gap-2 border-2 border-[var(--text-muted)] text-[var(--text-primary)] px-6 py-3 font-['Inter'] font-bold uppercase tracking-wider hover:border-[var(--vhs-gold)] hover:text-[var(--vhs-gold)] transition-colors"
              >
                <span>About</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- 3-color horizontal stripe transition - contained to content width -->
    <div class="max-w-6xl mx-auto px-4 md:px-8">
      <div class="h-6 w-full bg-[var(--vhs-cinnabar)]"></div>
      <div class="h-6 w-full bg-[var(--vhs-ocean)]"></div>
      <div class="h-6 w-full bg-[var(--vhs-gold)]"></div>
    </div>
    
    <!-- WORK SECTION — VHS Collection -->
    <section id="work" class="py-20 px-4 md:px-8 bg-[var(--bg-secondary)]">
      <div class="max-w-6xl mx-auto">
        <!-- Section header -->
        <div class="flex items-end justify-between mb-12 border-b-2 border-[var(--text-muted)]/30 pb-4">
          <div>
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] block mb-2">COLLECTION</span>
            <h2 class="font-['Inter'] font-black text-4xl md:text-6xl text-[var(--text-primary)] uppercase tracking-tight">
              PROJECT<br/>ARCHIVE
            </h2>
          </div>
          <div class="text-right">
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">FORMAT:</span>
            <span class="font-['Inter'] text-[var(--text-primary)] block">VHS-C</span>
          </div>
        </div>
        
        <!-- Projects Grid -->
        <div class="grid md:grid-cols-2 gap-8">
          {projects.map((project, index) => (
            <ProjectCard project={project} design={9} index={index} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- ABOUT SECTION — Technical Specs -->
    <section id="about" class="py-20 px-4 md:px-8 relative">
      <!-- Accent gradient stripe -->
      <div class="absolute top-0 left-0 w-full h-16 opacity-10" style="background: linear-gradient(180deg, var(--vhs-ocean) 0%, var(--vhs-cinnabar) 100%);"></div>
      
      <div class="max-w-6xl mx-auto relative z-10">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Left: Philosophy -->
          <div>
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] block mb-4">SPECIFICATIONS</span>
            <h2 class="font-['Inter'] font-black text-4xl md:text-5xl text-[var(--text-primary)] uppercase leading-tight mb-6">
              FUNCTIONAL<br/>THINKING
            </h2>
            <div class="space-y-4 text-[var(--text-secondary)] font-['Inter']">
              <p>
                My path through chemistry, civil service, BBC Radio, VR, and IT taught me one thing: 
                the best solutions emerge when you understand both the system <em class="text-[var(--vhs-gold)]">and</em> the human using it.
              </p>
              <p>
                AI isn't magic. It's a tool. Used well, it removes friction. Used poorly, it creates complexity. 
                I focus on removing friction.
              </p>
            </div>
            <div class="mt-6 flex items-center gap-4">
              <div class="w-12 h-12 border-2 border-[var(--vhs-ocean)] flex items-center justify-center">
                <span class="font-['JetBrains_Mono'] text-xs text-[var(--vhs-ocean)]">HR</span>
              </div>
              <span class="font-['Inter'] text-sm text-[var(--text-muted)]">High Resolution Problem Solving</span>
            </div>
          </div>
          
          <!-- Right: Experience table -->
          <div class="bg-[var(--bg-card)] border border-[var(--text-muted)]/30 p-6">
            <div class="flex items-center justify-between mb-6 border-b border-[var(--text-muted)]/20 pb-4">
              <h3 class="font-['Inter'] font-bold text-lg text-[var(--text-primary)] uppercase">Recording History</h3>
              <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">B-mode Compatible</span>
            </div>
            
            <div class="space-y-4">
              {experiences.map((exp, i) => (
                <div class="flex items-center gap-4 group">
                  <span class="font-['JetBrains_Mono'] text-xs text-[var(--vhs-cinnabar)] w-12">{exp.code}</span>
                  <div class="flex-1">
                    <div class="flex justify-between items-baseline">
                      <span class="font-['Inter'] text-[var(--text-primary)] group-hover:text-[var(--vhs-gold)] transition-colors">{exp.title}</span>
                      <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">{exp.year}</span>
                    </div>
                    <div class="h-px bg-[var(--text-muted)]/20 mt-2 relative overflow-hidden">
                      <div class="absolute inset-y-0 left-0 bg-[var(--vhs-ocean)]" style={`width: ${(6-i) * 16.66}%`}></div>
                    </div>
                  </div>
                  <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] w-12 text-right">{exp.mode}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- SKILLS SECTION — Data Table -->
    <section class="py-20 px-4 md:px-8 bg-[var(--bg-secondary)]">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] block mb-2">TECHNICAL DATA</span>
          <h2 class="font-['Inter'] font-black text-4xl text-[var(--text-primary)] uppercase">
            RECORDING SPECS
          </h2>
        </div>
        
        <!-- BASF-style data table -->
        <div class="border-2 border-[var(--text-muted)]/30 overflow-hidden">
          <table class="w-full">
            <thead>
              <tr class="border-b-2 border-[var(--text-muted)]/30 bg-[var(--bg-card)]">
                <th class="font-['Inter'] text-xs text-[var(--text-muted)] uppercase p-4 text-left">Mode</th>
                <th class="font-['Inter'] text-xs text-[var(--text-muted)] uppercase p-4 text-left">Technology</th>
                <th class="font-['Inter'] text-xs text-[var(--text-muted)] uppercase p-4 text-right">Proficiency</th>
                <th class="font-['Inter'] text-xs text-[var(--text-muted)] uppercase p-4 text-center">Grade</th>
              </tr>
            </thead>
            <tbody>
              {skills.map((skill, i) => (
                <tr class="border-b border-[var(--text-muted)]/10 hover:bg-[var(--bg-card)]/50 transition-colors">
                  <td class="p-4 font-['JetBrains_Mono'] text-xs text-[var(--vhs-ocean)]">B-{String(i+1).padStart(2, '0')}</td>
                  <td class="p-4 font-['Inter'] font-bold text-[var(--text-primary)]">{skill.name}</td>
                  <td class="p-4 text-right">
                    <span class="font-['JetBrains_Mono'] text-[var(--vhs-gold)]">{skill.level}</span>
                    <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">{skill.unit}</span>
                  </td>
                  <td class="p-4 text-center">
                    <span class={`inline-block w-3 h-3 rounded-full ${i < 3 ? 'bg-[var(--vhs-ocean)]' : i < 5 ? 'bg-[var(--vhs-gold)]' : 'bg-[var(--vhs-cinnabar)]'}`}></span>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        
        <p class="text-center mt-4 font-['Noto_Sans_JP'] text-xs text-[var(--text-muted)]">
          ※スキルレベルは実際のプロジェクト実績に基づく
        </p>
      </div>
    </section>
    
    <!-- CONTACT CTA -->
    <section class="py-20 px-4 md:px-8 relative overflow-hidden">
      <!-- Subtle accent gradient background -->
      <div class="absolute inset-0" style="background: linear-gradient(135deg, var(--vhs-ocean) 0%, var(--vhs-cinnabar) 100%); opacity: 0.08;"></div>
      
      <div class="max-w-4xl mx-auto text-center relative z-10">
        <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] block mb-4">END OF TAPE</span>
        <h2 class="font-['Inter'] font-black text-4xl md:text-6xl text-[var(--text-primary)] uppercase mb-6">
          LET'S CREATE<br/>SOMETHING
        </h2>
        <p class="font-['Inter'] text-lg text-[var(--text-secondary)] mb-8 max-w-lg mx-auto">
          Available for freelance projects. Ready to record your next big idea.
        </p>
        <a 
          href="mailto:hello@jamietaylor.dev" 
          class="inline-flex items-center gap-3 bg-[var(--bg-primary)] border-2 border-[var(--text-primary)] text-[var(--text-primary)] px-8 py-4 font-['Inter'] font-bold uppercase tracking-wider hover:bg-[var(--text-primary)] hover:text-[var(--bg-primary)] transition-colors"
        >
          <span>Get in Touch</span>
          <span class="font-['JetBrains_Mono']">→</span>
        </a>
      </div>
    </section>
    
    <Footer design={9} />
  </div>
</BaseLayout>

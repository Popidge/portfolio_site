---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

const skills = [
  { category: 'Languages', items: ['Python', 'JavaScript', 'TypeScript', 'C#'] },
  { category: 'Frameworks', items: ['React', 'Astro', 'Node.js', 'FastAPI'] },
  { category: 'AI/ML', items: ['OpenAI', 'LangChain', 'Anthropic', 'RAG'] },
  { category: 'Tools', items: ['Git', 'Docker', 'PostgreSQL', 'Redis'] },
];

const journey = [
  { period: '2024', role: 'AI & Web Developer', org: 'Freelance' },
  { period: '2022', role: 'IT Support', org: 'Technical Services' },
  { period: '2019', role: 'VR Operations', org: 'Immersive Tech' },
  { period: '2016', role: 'Broadcasting', org: 'BBC Local Radio' },
  { period: '2014', role: 'Management', org: 'UK Civil Service' },
  { period: '2012', role: 'BSc Chemistry', org: 'University of Leicester' },
];
---

<BaseLayout title="jamie. — AI Developer" design={4}>
  <div class="min-h-screen relative overflow-hidden">
    <!-- Animated gradient background -->
    <div class="fixed inset-0 bg-gradient-to-br from-[var(--bg-gradient-start)] via-[var(--bg-gradient-mid)] to-[var(--bg-gradient-end)]">
      <!-- Animated orbs -->
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-purple-500/30 rounded-full blur-[100px] animate-float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-pink-500/30 rounded-full blur-[100px] animate-float" style="animation-delay: -2s;"></div>
      <div class="absolute top-1/2 left-1/2 w-64 h-64 bg-blue-500/20 rounded-full blur-[80px] animate-float" style="animation-delay: -4s;"></div>
    </div>
    
    <!-- Noise texture -->
    <div class="fixed inset-0 noise pointer-events-none"></div>
    
    <Navigation design={4} currentPath="/4" />
    
    <!-- Hero Section -->
    <header class="min-h-screen flex items-center justify-center px-8 pt-24 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="glass rounded-3xl p-12 md:p-16 animate-fadeInUp">
          <p class="font-[Plus_Jakarta_Sans] text-white/60 text-sm uppercase tracking-[0.3em] mb-6">
            AI-Native Developer
          </p>
          
          <h1 class="font-[Plus_Jakarta_Sans] text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
            Hi, I'm<br />
            <span class="bg-gradient-to-r from-white via-purple-200 to-pink-200 bg-clip-text text-transparent">
              Jamie Taylor
            </span>
          </h1>
          
          <p class="font-[Plus_Jakarta_Sans] text-white/70 text-lg md:text-xl max-w-2xl mx-auto mb-10 leading-relaxed">
            Creating thoughtful digital experiences powered by AI. Based in Loughborough, UK, 
            bringing a unique perspective from chemistry, broadcasting, and technology.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="#projects" 
              class="px-8 py-4 rounded-full bg-white text-purple-700 font-semibold hover:scale-105 hover:shadow-xl transition-all"
            >
              View My Work
            </a>
            <a 
              href="#about" 
              class="px-8 py-4 rounded-full glass text-white font-semibold hover:bg-white/20 transition-all"
            >
              Learn More
            </a>
          </div>
        </div>
        
        <!-- Scroll indicator -->
        <div class="mt-16 animate-bounce">
          <svg class="w-6 h-6 mx-auto text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </header>
    
    <!-- Projects Section -->
    <section id="projects" class="py-24 px-8 relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="font-[Plus_Jakarta_Sans] text-white/60 text-sm uppercase tracking-[0.3em] mb-4">
            Portfolio
          </p>
          <h2 class="font-[Plus_Jakarta_Sans] text-4xl md:text-5xl font-bold text-white">
            Featured Projects
          </h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project, index) => (
            <ProjectCard project={project} design={4} index={index} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- About Section -->
    <section id="about" class="py-24 px-8 relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="glass rounded-3xl p-8 md:p-12">
          <div class="grid lg:grid-cols-2 gap-12">
            <div>
              <p class="font-[Plus_Jakarta_Sans] text-white/60 text-sm uppercase tracking-[0.3em] mb-4">
                About Me
              </p>
              <h2 class="font-[Plus_Jakarta_Sans] text-3xl md:text-4xl font-bold text-white mb-6">
                A Non-Linear Journey
              </h2>
              
              <div class="space-y-4 text-white/70">
                <p>
                  My path to tech wasn't straight. A chemistry degree taught me to think systematically. 
                  Civil service showed me how organizations function. BBC Radio sparked creativity. 
                  VR operations revealed the magic of immersive technology.
                </p>
                <p>
                  Now, as an AI-native developer, I combine all these perspectives. I believe 
                  the best technology feels invisible — it amplifies human potential without 
                  getting in the way.
                </p>
                <p>
                  When I'm not coding, you'll find me exploring new AI tools, experimenting 
                  with creative projects, or enjoying the Leicestershire countryside.
                </p>
              </div>
            </div>
            
            <div>
              <p class="font-[Plus_Jakarta_Sans] text-white/60 text-sm uppercase tracking-[0.3em] mb-4">
                My Journey
              </p>
              
              <div class="space-y-4">
                {journey.map((item, i) => (
                  <div 
                    class="glass rounded-xl p-4 flex items-center gap-4 animate-fadeInUp"
                    style={`animation-delay: ${i * 0.1}s`}
                  >
                    <span class="text-white/40 text-sm font-mono w-12">{item.period}</span>
                    <div class="flex-1">
                      <p class="text-white font-medium">{item.role}</p>
                      <p class="text-white/50 text-sm">{item.org}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Skills Section -->
    <section class="py-24 px-8 relative z-10">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <p class="font-[Plus_Jakarta_Sans] text-white/60 text-sm uppercase tracking-[0.3em] mb-4">
            Capabilities
          </p>
          <h2 class="font-[Plus_Jakarta_Sans] text-4xl md:text-5xl font-bold text-white">
            Skills & Tools
          </h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {skills.map((skillGroup, i) => (
            <div 
              class="glass rounded-2xl p-6 animate-fadeInUp"
              style={`animation-delay: ${i * 0.1}s`}
            >
              <h3 class="font-[Plus_Jakarta_Sans] text-white font-semibold mb-4">
                {skillGroup.category}
              </h3>
              <div class="flex flex-wrap gap-2">
                {skillGroup.items.map((skill) => (
                  <span class="text-sm text-white/60 bg-white/10 rounded-full px-3 py-1">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Philosophy Quote -->
    <section class="py-24 px-8 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="glass rounded-3xl p-12 text-center">
          <svg class="w-12 h-12 mx-auto text-white/30 mb-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
          </svg>
          
          <blockquote class="font-[Plus_Jakarta_Sans] text-2xl md:text-3xl text-white font-medium leading-relaxed mb-6">
            The best technology doesn't call attention to itself. 
            It simply makes everything else better.
          </blockquote>
          
          <p class="text-white/50">— My design philosophy</p>
        </div>
      </div>
    </section>
    
    <Footer design={4} />
  </div>
</BaseLayout>

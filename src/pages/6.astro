---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

const experiences = [
  { year: '2012', title: 'Chemistry BSc (Hons)' },
  { year: '2013', title: 'Civil Service Management' },
  { year: '2015', title: 'BBC Local Radio' },
  { year: '2017', title: 'VR Operations' },
  { year: '2019', title: 'IT Support' },
  { year: 'NOW', title: 'AI-Native Dev' },
];

const skills = ['Python', 'JavaScript', 'React', 'Astro', 'AI/ML', 'Node.js'];
---

<BaseLayout title="Jamie Taylor — Bauhaus" design={6}>
  <div class="min-h-screen bg-[var(--bg-primary)] text-[var(--text-primary)]">
    <Navigation design={6} currentPath="/6" />
    
    <!-- Hero Section - Asymmetric Grid -->
    <header class="min-h-screen pt-24 pb-16 px-4 md:px-8 lg:px-12 relative overflow-hidden">
      <!-- Geometric Shapes Background -->
      <div class="absolute top-32 right-12 w-32 h-32 bg-[var(--bauhaus-red)] rotate-45 opacity-90 hidden md:block"></div>
      <div class="absolute bottom-32 left-12 w-48 h-48 bg-[var(--bauhaus-blue)] rounded-full opacity-20 hidden md:block"></div>
      <div class="absolute top-1/3 left-1/4 w-16 h-16 border-4 border-[var(--bauhaus-yellow)] hidden md:block"></div>
      
      <div class="max-w-7xl mx-auto">
        <!-- Top Info Bar -->
        <div class="flex justify-between items-start mb-12 border-b-2 border-[var(--text-primary)] pb-4 animate-fadeInUp">
          <div class="flex items-center gap-8">
            <span class="font-medium uppercase text-sm tracking-widest">Loughborough, UK</span>
            <span class="w-8 h-8 rounded-full" style="background: black;"></span>
          </div>
          <span class="font-medium uppercase text-sm tracking-widest">Jamie Taylor</span>
        </div>
        
        <!-- Main Grid -->
        <div class="grid md:grid-cols-12 gap-4 items-end">
          <!-- Left: Large Typography -->
          <div class="md:col-span-7 animate-fadeInUp stagger-1">
            <h1 class="font-['Space_Grotesk'] text-7xl md:text-9xl lg:text-[12rem] font-bold leading-[0.85] tracking-tighter">
              JAMIE
              <span class="bg-[var(--bauhaus-red)] text-white px-4 inline-block">+</span>
            </h1>
            <h1 class="font-['Space_Grotesk'] text-7xl md:text-9xl lg:text-[12rem] font-bold leading-[0.85] tracking-tighter ml-8 md:ml-16">
              TAYLOR
            </h1>
          </div>
          
          <!-- Right: Info Stack -->
          <div class="md:col-span-5 space-y-4 animate-fadeInUp stagger-2">
            <div class="border-l-4 border-[var(--bauhaus-blue)] pl-4">
              <p class="text-lg md:text-xl font-medium leading-snug max-w-sm">
                I'm JT. I build with code and AI. I create tools that solve real problems through functional beauty.
              </p>
            </div>
            
            <!-- CTA Buttons -->
            <div class="flex gap-4 pt-8">
              <a 
                href="#work" 
                class="inline-block bg-[var(--bauhaus-red)] text-white px-6 py-3 font-bold uppercase tracking-wider hover:bg-[var(--bauhaus-blue)] transition-colors"
              >
                View Work
              </a>
              <a 
                href="#about" 
                class="inline-block border-2 border-[var(--text-primary)] px-6 py-3 font-bold uppercase tracking-wider hover:bg-[var(--text-primary)] hover:text-white transition-colors"
              >
                About
              </a>
            </div>
          </div>
        </div>
        
        <!-- Bottom Geometric Element -->
        <div class="mt-16 flex items-center gap-6 animate-fadeInUp stagger-3">
          <div class="flex-1 h-1 bg-[var(--bauhaus-yellow)]"></div>
          <div class="w-8 h-8 bg-[var(--bauhaus-red)] rotate-12"></div>
          <div class="flex-1 h-1 bg-[var(--bauhaus-blue)]"></div>
        </div>
      </div>
    </header>
    
    <!-- Work Section -->
    <section id="work" class="py-20 px-4 md:px-8 lg:px-12 bg-white">
      <div class="max-w-7xl mx-auto">
        <div class="flex items-end justify-between mb-16 border-b-2 border-black pb-4">
          <h2 class="font-['Space_Grotesk'] text-5xl md:text-7xl font-bold tracking-tight">
            WORK
          </h2>
          <div class="hidden md:block">
            <span class="text-sm uppercase tracking-widest">Selected Projects</span>
          </div>
        </div>
        
        <!-- Projects Grid with Geometric Accents -->
        <div class="grid md:grid-cols-2 gap-8 relative">
          {projects.map((project, index) => (
            <ProjectCard project={project} design={6} index={index} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- About Section - Grid Layout -->
    <section id="about" class="py-20 px-4 md:px-8 lg:px-12">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-12 gap-8">
          <!-- Left Column: Statement -->
          <div class="md:col-span-5">
            <div class="bg-[var(--bauhaus-blue)] text-white p-8 md:p-12 h-full">
              <span class="text-[var(--bauhaus-yellow)] font-mono text-sm mb-4 block">01</span>
              <h2 class="font-['Space_Grotesk'] text-4xl md:text-5xl font-bold leading-tighter mb-8">
                FUNCTIONAL<br/>
                THINKING
              </h2>
              <p class="text-lg leading-relaxed text-white/90 mb-6">
                My path through chemistry, civil service, BBC Radio, VR, and IT taught me one thing: the best solutions emerge when you understand both the system <em>and</em> the human using it.
              </p>
              <p class="text-lg leading-relaxed text-white/90">
                AI isn't magic. It's a tool. Used well, it removes friction. Used poorly, it creates complexity. I focus on removing friction.
              </p>
            </div>
          </div>
          
          <!-- Right Column: Timeline -->
          <div class="md:col-span-7">
            <div class="border-2 border-black p-8 h-full">
              <div class="flex items-center justify-between mb-8">
                <h3 class="font-['Space_Grotesk'] text-2xl font-bold">PATH TAKEN</h3>
                <div class="w-12 h-12 bg-[var(--bauhaus-red)] rounded-full"></div>
              </div>
              
              <div class="space-y-6">
                {experiences.map((exp, i) => (
                  <div class="flex items-baseline gap-4 group border-b border-black/10 pb-4 last:border-0">
                    <span class="font-mono text-sm text-[var(--bauhaus-red)] w-16">{exp.year}</span>
                    <span class="flex-1 text-lg font-medium group-hover:translate-x-2 transition-transform">
                      {exp.title}
                    </span>
                    <div class="w-3 h-3 bg-[var(--bauhaus-yellow)]"></div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Skills Section - Color Blocks -->
    <section class="py-20 bg-[var(--bauhaus-black)] text-white">
      <div class="max-w-7xl mx-auto px-4 md:px-8 lg:px-12">
        <h2 class="font-['Space_Grotesk'] text-4xl md:text-5xl font-bold mb-12 text-center">
          TOOLS OF THE CRAFT
        </h2>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
          {skills.map((skill, i) => {
            const colors = ['bg-[var(--bauhaus-red)]', 'bg-[var(--bauhaus-blue)]', 'bg-[var(--bauhaus-yellow)] text-black'];
            const color = colors[i % 3];
            return (
              <div class={`${color} aspect-square flex items-center justify-center p-4 hover:scale-105 transition-transform`}>
                <span class="font-bold text-lg md:text-xl uppercase text-center leading-tight">
                  {skill}
                </span>
              </div>
            )
          })}
        </div>
      </div>
    </section>
    
    <!-- Quote Section -->
    <section class="py-20 px-4 md:px-8 lg:px-12">
      <div class="max-w-4xl mx-auto text-center relative">
        <div class="absolute -top-8 left-1/2 -translate-x-1/2 w-24 h-24 border-4 border-[var(--bauhaus-red)] rotate-45"></div>
        <blockquote class="relative z-10">
          <p class="font-['Space_Grotesk'] text-3xl md:text-5xl font-bold leading-tight mb-8">
            "The aim of design is to improve life, not to decorate it."
          </p>
          <cite class="text-lg uppercase tracking-widest text-[var(--text-muted)]">
            — Bauhaus Principle
          </cite>
        </blockquote>
      </div>
    </section>
    
    <!-- Contact CTA -->
    <section class="py-20 px-4 md:px-8 lg:px-12 bg-[var(--bauhaus-yellow)]">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-['Space_Grotesk'] text-4xl md:text-6xl font-bold mb-8 text-black">
          LET'S BUILD<br/>TOGETHER
        </h2>
        <a 
          href="mailto:hello@jamietaylor.dev" 
          class="inline-block bg-black text-white px-10 py-4 font-bold text-lg uppercase tracking-wider hover:bg-[var(--bauhaus-blue)] hover:scale-105 transition-all"
        >
          Get in Touch
        </a>
      </div>
    </section>
    
    <Footer design={6} />
  </div>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ParticleCanvas from '../components/react/ParticleCanvas.jsx';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);

const stats = [
  { number: '12+', label: 'Years of diverse experience' },
  { number: '5', label: 'Different industries' },
  { number: '∞', label: 'Curiosity level' },
];

const traits = [
  { title: 'AI-Native', description: 'Embracing AI as a creative partner, not just a tool' },
  { title: 'Multi-Disciplinary', description: 'Chemistry, broadcasting, management, tech support — all inform my approach' },
  { title: 'Human-Centered', description: 'Technology should amplify people, not replace them' },
  { title: 'Always Learning', description: 'Every project is an opportunity to explore something new' },
];
---

<BaseLayout title="JT — AI-Native Developer" design={5}>
  <div class="min-h-screen bg-[var(--bg-dark)] text-white relative">
    <!-- Particle Canvas Background -->
    <ParticleCanvas client:visible />
    
    <!-- Subtle gradient overlay -->
    <div class="fixed inset-0 bg-gradient-to-b from-transparent via-[var(--bg-dark)]/50 to-[var(--bg-dark)] pointer-events-none"></div>
    
    <Navigation design={5} currentPath="/5" />
    
    <!-- Hero Section -->
    <header class="min-h-screen flex items-center px-8 pt-24 relative z-10">
      <div class="max-w-7xl mx-auto w-full">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <div>
            <div class="animate-fadeInUp">
              <p class="font-[Syne] text-sm font-medium text-white/40 uppercase tracking-[0.4em] mb-6">
                AI-Native Developer
              </p>
              
              <h1 class="font-[Syne] text-5xl md:text-7xl font-bold mb-6 leading-[1.1]">
                <span class="block text-white">Jamie</span>
                <span class="block bg-gradient-to-r from-[var(--particle-primary)] via-[var(--particle-secondary)] to-[var(--particle-tertiary)] bg-clip-text text-transparent">
                  Taylor
                </span>
              </h1>
              
              <p class="text-white/50 text-lg max-w-lg mb-10 leading-relaxed animate-fadeInUp stagger-2">
                Crafting intelligent digital experiences from Loughborough, UK. 
                Where diverse experience meets cutting-edge AI to create 
                something genuinely useful.
              </p>
              
              <div class="flex flex-wrap gap-4 animate-fadeInUp stagger-3">
                <a 
                  href="#projects" 
                  class="group px-6 py-3 rounded-full bg-gradient-to-r from-[var(--particle-primary)] to-[var(--particle-secondary)] text-white font-medium hover:shadow-lg hover:shadow-[var(--particle-primary)]/25 transition-all"
                >
                  Explore Projects
                  <span class="inline-block ml-2 group-hover:translate-x-1 transition-transform">→</span>
                </a>
                <a 
                  href="#about" 
                  class="px-6 py-3 rounded-full border border-white/20 text-white/80 font-medium hover:bg-white/5 hover:border-white/40 transition-all"
                >
                  About Me
                </a>
              </div>
            </div>
          </div>
          
          <div class="hidden lg:flex justify-end">
            <div class="grid grid-cols-1 gap-6">
              {stats.map((stat, i) => (
                <div 
                  class="text-right animate-fadeInUp"
                  style={`animation-delay: ${0.4 + i * 0.15}s`}
                >
                  <div class="font-[Syne] text-5xl font-bold bg-gradient-to-r from-[var(--particle-primary)] to-[var(--particle-secondary)] bg-clip-text text-transparent">
                    {stat.number}
                  </div>
                  <div class="text-white/40 text-sm">{stat.label}</div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Projects Section -->
    <section id="projects" class="py-32 px-8 relative z-10">
      <div class="max-w-7xl mx-auto">
        <div class="mb-20 text-center">
          <p class="font-[Syne] text-sm font-medium text-white/40 uppercase tracking-[0.4em] mb-4">
            Portfolio
          </p>
          <h2 class="font-[Syne] text-4xl md:text-5xl font-bold text-white">
            Selected <span class="bg-gradient-to-r from-[var(--particle-primary)] to-[var(--particle-tertiary)] bg-clip-text text-transparent">Projects</span>
          </h2>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project, index) => (
            <ProjectCard project={project} design={5} index={index} />
          ))}
        </div>
      </div>
    </section>
    
    <!-- About Section -->
    <section id="about" class="py-32 px-8 relative z-10">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16">
          <div>
            <p class="font-[Syne] text-sm font-medium text-white/40 uppercase tracking-[0.4em] mb-4">
              Background
            </p>
            <h2 class="font-[Syne] text-4xl md:text-5xl font-bold text-white mb-8">
              The <span class="bg-gradient-to-r from-[var(--particle-secondary)] to-[var(--particle-tertiary)] bg-clip-text text-transparent">Story</span>
            </h2>
            
            <div class="space-y-6 text-white/60">
              <p>
                My journey to AI development wasn't planned — it was discovered. 
                A chemistry degree from Leicester taught me to think in systems. 
                Years in the civil service showed me how organizations actually work 
                (and don't work).
              </p>
              <p>
                BBC Local Radio ignited my passion for storytelling and connecting 
                with audiences. VR operations revealed how immersive technology 
                can transform experiences. IT support grounded me in the practical 
                realities of making tech work for real people.
              </p>
              <p>
                Now, as an AI-native developer, I bring all these perspectives 
                together. I'm not interested in AI for its own sake — I'm interested 
                in what it can help us build and become.
              </p>
            </div>
          </div>
          
          <div>
            <p class="font-[Syne] text-sm font-medium text-white/40 uppercase tracking-[0.4em] mb-4">
              Approach
            </p>
            <h2 class="font-[Syne] text-4xl md:text-5xl font-bold text-white mb-8">
              What <span class="bg-gradient-to-r from-[var(--particle-primary)] to-[var(--particle-secondary)] bg-clip-text text-transparent">Drives</span> Me
            </h2>
            
            <div class="space-y-4">
              {traits.map((trait, i) => (
                <div 
                  class="p-5 rounded-xl border border-white/10 bg-white/5 hover:border-[var(--particle-primary)]/30 hover:bg-[var(--particle-primary)]/5 transition-all animate-fadeInUp"
                  style={`animation-delay: ${i * 0.1}s`}
                >
                  <h3 class="font-[Syne] text-white font-semibold mb-1">{trait.title}</h3>
                  <p class="text-white/50 text-sm">{trait.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Quote Section -->
    <section class="py-32 px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="relative">
          <div class="absolute -top-8 left-1/2 -translate-x-1/2 w-16 h-16 bg-gradient-to-r from-[var(--particle-primary)] to-[var(--particle-secondary)] rounded-full blur-3xl opacity-50"></div>
          
          <blockquote class="font-[Syne] text-2xl md:text-4xl font-bold text-white leading-relaxed relative z-10">
            "The most powerful technology is the kind you don't notice — 
            <span class="bg-gradient-to-r from-[var(--particle-primary)] via-[var(--particle-secondary)] to-[var(--particle-tertiary)] bg-clip-text text-transparent">
              it just makes everything better.
            </span>"
          </blockquote>
        </div>
      </div>
    </section>
    
    <!-- Contact CTA -->
    <section class="py-32 px-8 relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="text-center p-12 rounded-3xl border border-white/10 bg-gradient-to-b from-white/5 to-transparent relative overflow-hidden">
          <!-- Glow effect -->
          <div class="absolute top-0 left-1/2 -translate-x-1/2 w-64 h-32 bg-gradient-to-r from-[var(--particle-primary)] to-[var(--particle-secondary)] blur-[100px] opacity-30"></div>
          
          <div class="relative z-10">
            <p class="font-[Syne] text-sm font-medium text-white/40 uppercase tracking-[0.4em] mb-4">
              Let's Connect
            </p>
            <h2 class="font-[Syne] text-3xl md:text-4xl font-bold text-white mb-6">
              Have a project in mind?
            </h2>
            <p class="text-white/50 mb-8 max-w-lg mx-auto">
              I'm always interested in hearing about new projects, 
              especially those involving AI, creative technology, or solving interesting problems.
            </p>
            <a 
              href="mailto:hello@jamietaylor.dev" 
              class="inline-block px-8 py-4 rounded-full bg-gradient-to-r from-[var(--particle-primary)] via-[var(--particle-secondary)] to-[var(--particle-tertiary)] text-white font-semibold hover:shadow-xl hover:shadow-[var(--particle-primary)]/25 hover:scale-105 transition-all"
            >
              Get in Touch
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <Footer design={5} />
  </div>
</BaseLayout>

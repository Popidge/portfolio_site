---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Get all unique tags
const allTags = [...new Set(posts.flatMap(post => post.data.tags))].sort();
---

<BaseLayout title="Blog — Jamie Taylor" description="Thoughts on AI, development, and building software that works.">
  <div class="min-h-screen bg-[var(--bg-primary)] text-[var(--text-primary)] relative overflow-hidden">
    <!-- Analog noise overlay -->
    <div class="fixed inset-0 pointer-events-none z-50 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E');"></div>
    
    <!-- Scanlines -->
    <div class="fixed inset-0 pointer-events-none z-40" style="background: repeating-linear-gradient(0deg, rgba(0,0,0,0.1) 0px, transparent 1px, transparent 2px); background-size: 100% 4px;"></div>
    
    <Navigation currentPath="/blog" />
    
    <!-- HEADER SECTION -->
    <header class="pt-32 pb-12 px-4 md:px-8 relative">
      <div class="max-w-6xl mx-auto">
        <!-- Top label bar -->
        <div class="flex items-center justify-between border-b-2 border-[var(--text-muted)]/30 pb-4 mb-8">
          <div class="flex items-center gap-4">
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">ARCHIVE:</span>
            <span class="font-['Inter'] font-black text-2xl text-[var(--text-primary)] tracking-wider">BLOG-001</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="font-['Noto_Sans_JP'] text-xs text-[var(--text-muted)]">ログ</span>
            <span class="px-2 py-1 bg-[var(--color-vhs-ocean)] text-white font-['Inter'] font-bold text-xs">LOG</span>
          </div>
        </div>
        
        <!-- Title -->
        <div class="grid md:grid-cols-2 gap-8 items-end">
          <div>
            <div class="flex items-center gap-3 mb-4">
              <div class="flex gap-1">
                {[...Array(3)].map((_, i) => (
                  <span class="w-2 h-2 rounded-full bg-[var(--color-vhs-ocean)]"></span>
                ))}
              </div>
              <span class="font-['Noto_Sans_JP'] text-xs text-[var(--color-vhs-ocean)]">書き物</span>
            </div>
            <h1 class="font-['Inter'] font-black text-5xl md:text-6xl text-[var(--text-primary)] uppercase leading-none tracking-tight">
              RECORDED<br/>THOUGHTS
            </h1>
          </div>
          
          <div class="text-right">
            <p class="font-['Inter'] text-lg text-[var(--text-secondary)] max-w-md ml-auto">
              Essays on AI, development workflows, and the craft of building software. 
              No comments—just signal.
            </p>
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] block mt-2">
              {posts.length} ENTRIES • LAST UPDATED: {posts[0]?.data.date.toISOString().split('T')[0].split('-').join('.') || 'N/A'}
            </span>
          </div>
        </div>
      </div>
    </header>
    
    <!-- 3-color stripe -->
    <div class="max-w-6xl mx-auto px-4 md:px-8">
      <div class="h-2 w-full bg-[var(--color-vhs-ocean)]"></div>
      <div class="h-2 w-full bg-[var(--color-vhs-cinnabar)]"></div>
      <div class="h-2 w-full bg-[var(--color-vhs-gold)]"></div>
    </div>
    
    <!-- BLOG POSTS GRID -->
    <section class="py-16 px-4 md:px-8">
      <div class="max-w-6xl mx-auto">
        <!-- Tags filter -->
        {allTags.length > 0 && (
          <div class="mb-12 flex flex-wrap gap-2">
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] mr-2 self-center">FILTER:</span>
            {allTags.map(tag => (
              <span class="font-['JetBrains_Mono'] text-xs text-[var(--color-vhs-gold)] bg-[var(--bg-card)] px-3 py-1 border border-[var(--text-muted)]/20">
                #{tag}
              </span>
            ))}
          </div>
        )}
        
        <!-- Posts grid -->
        {posts.length === 0 ? (
          <div class="text-center py-20">
            <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] block mb-4">STATUS: EMPTY</span>
            <p class="font-['Inter'] text-[var(--text-secondary)]">No posts yet. Check back soon.</p>
          </div>
        ) : (
          <div class="grid md:grid-cols-2 gap-8">
            {posts.map((post, index) => (
              <article
                class="group bg-[var(--bg-card)] border-2 border-[var(--text-muted)]/30 animate-fadeInUp hover:border-[var(--color-vhs-gold)] transition-colors"
                style={`animation-delay: ${index * 0.1}s`}
              >
                <div class="border-b-2 border-[var(--text-muted)]/30 p-4 flex justify-between items-center bg-[var(--bg-secondary)]">
                  <div class="flex items-center gap-3">
                    <span class="font-['JetBrains_Mono'] text-xs text-[var(--color-vhs-ocean)]">LOG</span>
                    <span class="font-['Inter'] font-bold text-sm text-[var(--text-primary)]">
                      {String(index + 1).padStart(2, '0')}
                    </span>
                  </div>
                  <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">
                    {post.data.date.toISOString().split('T')[0].split('-').join('.')}
                  </span>
                </div>
                
                <div class="p-6">
                  <h2 class="font-['Inter'] font-black text-xl md:text-2xl text-[var(--text-primary)] uppercase leading-tight mb-3 group-hover:text-[var(--color-vhs-gold)] transition-colors">
                    <a href={`/blog/${post.slug}`} class="no-underline">
                      {post.data.title}
                    </a>
                  </h2>
                  
                  <p class="font-['Inter'] text-sm text-[var(--text-secondary)] mb-4 line-clamp-3">
                    {post.data.excerpt || post.body?.slice(0, 150).split('').filter(c => !['#', '*', '_', '`'].includes(c)).join('') + '...'}
                  </p>
                  
                  {post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {post.data.tags.map(tag => (
                        <span class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] bg-[var(--bg-primary)] px-2 py-1 border border-[var(--text-muted)]/10">
                          #{tag}
                        </span>
                      ))}
                    </div>
                  )}
                  
                  <a
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center gap-2 font-['JetBrains_Mono'] text-xs text-[var(--color-vhs-cinnabar)] hover:text-[var(--color-vhs-gold)] transition-colors"
                  >
                    <span>[READ MORE]</span>
                    <span class="group-hover:translate-x-1 transition-transform">→</span>
                  </a>
                </div>
                
                <div class="h-1 w-full bg-[var(--color-vhs-ocean)]"></div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
    
    <!-- BACK TO HOME -->
    <section class="py-12 px-4 md:px-8 border-t border-[var(--text-muted)]/10">
      <div class="max-w-6xl mx-auto text-center">
        <a 
          href="/" 
          class="inline-flex items-center gap-3 font-['JetBrains_Mono'] text-xs text-[var(--text-muted)] hover:text-[var(--color-vhs-gold)] transition-colors"
        >
          <span>←</span>
          <span>[RETURN TO HOME]</span>
        </a>
      </div>
    </section>
    
    <Footer />
  </div>
</BaseLayout>

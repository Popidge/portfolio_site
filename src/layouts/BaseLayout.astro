---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  design?: 1 | 2 | 3 | 4 | 5 | 6 | 7 | 8 | 9;
}

const { 
  title, 
  description = "Jamie Taylor - AI-Native Web Developer from Loughborough, UK",
  design = 1 
} = Astro.props;

const designClass = `design-${design}`;
---

<!DOCTYPE html>
<html lang="en" class={designClass}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Preconnect to font services -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Fonts for different designs -->
    <!-- Design 1: Minimalist - Instrument Serif + Satoshi -->
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet" />
    
    <!-- Design 2: Cyberpunk - Orbitron + Space Mono -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet" />
    
    <!-- Design 3: Brutalist - Archivo Black + System -->
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet" />
    
    <!-- Design 4: Glassmorphism - Plus Jakarta Sans -->
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet" />
    
    <!-- Design 5: Particles - Syne -->
    <link href="https://fonts.googleapis.com/css2?family=Syne:wght@400..800&display=swap" rel="stylesheet" />
    
    <!-- Design 6: Bauhaus - Space Grotesk -->
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap" rel="stylesheet" />
    
    <!-- Design 9: VHS Analog - Inter + JetBrains Mono + Noto Sans JP -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;700&family=Noto+Sans+JP:wght@400;700&display=swap" rel="stylesheet" />
    
    <!-- Satoshi from Fontshare (for Design 1) -->
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,700,900&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
    
    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />
  </head>
  <body>
    <slot />
  </body>
</html>

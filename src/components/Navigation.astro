---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;
---

<nav class="fixed top-0 left-0 right-0 z-50 py-4 px-4 md:px-8 bg-[var(--bg-primary)] border-b border-[var(--text-muted)]/10">
  <div class="max-w-7xl mx-auto flex justify-between items-center">
    <a href="/" class="flex items-center gap-3 font-['Inter'] text-xl font-black text-[var(--text-primary)] uppercase tracking-wider">
      <span class="flex gap-1">
        {[...Array(4)].map((_, i) => (
          <span class="w-2 h-2 rounded-full bg-[var(--color-vhs-cinnabar)]"></span>
        ))}
      </span>
      <span>JAMIE TAYLOR</span>
    </a>
    
    <div class="flex gap-1 md:gap-2 items-center">
      <a 
        href="/" 
        class:list={[
          "font-['JetBrains_Mono'] text-xs px-2 py-1 transition-colors",
          currentPath === '/' ? "text-[var(--color-vhs-gold)]" : "text-[var(--text-secondary)] hover:text-[var(--color-vhs-gold)]"
        ]}
      >
        HOME
      </a>
      <a 
        href="/blog" 
        class:list={[
          "font-['JetBrains_Mono'] text-xs px-2 py-1 transition-colors",
          currentPath.startsWith('/blog') ? "text-[var(--color-vhs-gold)]" : "text-[var(--text-secondary)] hover:text-[var(--color-vhs-gold)]"
        ]}
      >
        BLOG
      </a>
    </div>
  </div>
</nav>

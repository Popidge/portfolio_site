---
const socials = [
  { name: 'GitHub', url: 'https://github.com/popidge', icon: 'github' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/jamie-taylor-52914950/', icon: 'linkedin' },
  { name: 'Twitter', url: 'https://twitter.com/TweetsByJT', icon: 'twitter' },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-[var(--bg-primary)] text-[var(--text-primary)] py-12 px-4 md:px-8 relative">
  {/* Accent stripe at top */}
  <div class="absolute top-0 left-0 w-full h-2 bg-[var(--color-vhs-cinnabar)]"></div>
  
  <div class="max-w-6xl mx-auto pt-8">
    {/* Top section */}
    <div class="flex flex-col md:flex-row justify-between items-start gap-8 mb-8">
      <div>
        <div class="flex items-center gap-3 mb-4">
          <span class="font-['JetBrains_Mono'] text-xs text-[var(--color-vhs-cinnabar)]">VHS</span>
          <div class="flex gap-1">
            {[...Array(5)].map((_, i) => (
              <span class="w-2 h-2 rounded-full bg-[var(--color-vhs-cinnabar)]"></span>
            ))}
          </div>
        </div>
        <p class="font-['Inter'] font-black text-3xl md:text-4xl uppercase tracking-tight mb-2">
          JAMIE TAYLOR
        </p>
        <p class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">
          E-120 HR // SUPER HIGH GRADE
        </p>
      </div>
      
      <div class="text-right">
        <span class="font-['Noto_Sans_JP'] text-xs text-[var(--text-muted)] block mb-2">ソーシャル</span>
        <div class="flex gap-3">
          {socials.map((social) => (
            <a
              href={social.url}
              class="px-3 py-2 border border-[var(--text-muted)]/30 font-['JetBrains_Mono'] text-xs text-[var(--text-secondary)] hover:border-[var(--color-vhs-gold)] hover:text-[var(--color-vhs-gold)] transition-colors"
              target="_blank"
              rel="noopener noreferrer"
            >
              {social.name}
            </a>
          ))}
        </div>
      </div>
    </div>
    
    {/* Technical info bar */}
    <div class="border-t border-b border-[var(--text-muted)]/20 py-4 mb-8">
      <div class="flex flex-wrap justify-between items-center gap-4 text-xs font-['JetBrains_Mono'] text-[var(--text-muted)]">
        <span>LOC: LOUGHBOROUGH, UK</span>
        <span>LAT: 52.7721° N</span>
        <span>LONG: 1.2063° W</span>
        <span>STATUS: AVAILABLE</span>
        <span>FORMAT: FULL STACK</span>
      </div>
    </div>
    
    {/* Bottom */}
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="font-['JetBrains_Mono'] text-xs text-[var(--text-muted)]">
        © {currentYear} // JT-DEV-001
      </p>
      <p class="font-['Noto_Sans_JP'] text-xs text-[var(--text-muted)]">
        プロフェッショナル録画再生
      </p>
    </div>
  </div>
</footer>
